{# templates/project/developer_form.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{{ form.vars.value.id ? 'Edit Developer' : 'Create New Developer' }}</title>
    <link rel="stylesheet" href="{{ asset('css/style_developer_form.css') }}">
</head>
<body>

{% for label, messages in app.flashes %}
    <div class="flash-message {{ label }}">
        {% for message in messages %}
            <p>{{ message }}</p>
        {% endfor %}
    </div>
{% endfor %}

<h1>{{ form.vars.value.id ? 'Edit Developer' : 'Create New Developer' }}</h1>

{{ form_start(form) }}

{% if form.vars.errors|length > 0 %}
    <div class="form-errors">
        <ul>
            {% for error in form.vars.errors %}
                <li>{{ error.message }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

<div class="form-group">
    <label for="fullName">Full Name</label>
    {{ form_widget(form.fullName) }}
    {{ form_errors(form.fullName) }}
</div>

<div class="form-group">
    <label for="birthDate">Birth Date</label>
    {{ form_widget(form.birthDate) }}
    {{ form_errors(form.birthDate) }}
</div>

<div class="form-group">
    <label for="position">Position</label>
    {{ form_widget(form.position) }}
    {{ form_errors(form.position) }}
</div>

<div class="form-group">
    <label for="email">Email</label>
    {{ form_widget(form.email) }}
    {{ form_errors(form.email) }}
</div>

<div class="form-group">
    <label for="contactNumber">Contact Number</label>
    {{ form_widget(form.contactNumber) }}
    {{ form_errors(form.contactNumber) }}
</div>

<div class="form-group">
    <label for="hireDate">Hire Date</label>
    {{ form_widget(form.hireDate) }}
    {{ form_errors(form.hireDate) }}
</div>

<div class="form-group">
    <label for="terminationDate">Termination Date</label>
    {{ form_widget(form.terminationDate) }}
    {{ form_errors(form.terminationDate) }}
</div>

<div class="form-group">
    <label for="isActive">Is Active</label>
    <div class="radio-group">
        {{ form_widget(form.isActive) }}
        {{ form_errors(form.isActive) }}
    </div>
</div>

<div class="form-group">
    <label for="projects">Projects</label>
    <div class="projects-checkbox">
        {{ form_widget(form.projects) }}
        {{ form_errors(form.projects) }}
    </div>
</div>

<button type="submit">{{ form.vars.value.id ? 'Save Changes' : 'Create Developer' }}</button>

{{ form_end(form) }}

<a href="{{ path('developers_list') }}">See Developer List</a>

</body>
</html>
